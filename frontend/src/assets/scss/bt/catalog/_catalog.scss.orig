.catalog {
  min-height: 600px;
  height: 100vh;

  // row
  > div {
    height: 100%;
    overflow-y: scroll;

    // columns
    > div {
      height: 100%;

      @include mobile {
        height: 25%;
      }

      @include tablet {
        height: 25%;
      }
    }
  }

  .row {
    margin: 0; // override bootstrap padding

    .filter-column {
      border-right: 1px solid $bt-border-grey;
      padding: 0; // override bootstrap padding
    }
  
    .filter-results-column {
      border-right: 1px solid $bt-border-grey;
      padding: 0; // override bootstrap padding
    }
  
    .catalog-description-column {
      padding: 0; // override bootstrap padding
    }
  }
}